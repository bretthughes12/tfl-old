<% title "Listing Players" %>

<h1><%= yield(:title) %></h1>

<table cellpadding="5" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>TFL code</th>
    <th>AFL team</th>
    <th>TFL team</th>
    <th>Category</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= link_to h(player.name), edit_player_path(player) %></td>
    <td><%=h player.tfl_code %></td>
    <td><%=h player.afl_team.name unless player.afl_team.nil? %></td>
    <td><%=h player.tfl_team.name unless player.tfl_team.nil? %></td>
    <td><%=h player.category %></td>
    <td class="action"><%= link_to 'Show', player %></td>
    <td class="action"><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New player', new_player_path %>