<% title "Listing TFL Teams" %>

<h1><%= yield(:title) %></h1>

<table cellpadding="5" cellspacing="0">
  <tr>
	<th>Name</th>
	<th>Abbreviation</th>
  </tr>

<% for tfl_team in @tfl_teams %>
  <tr valign="top">
	<td><%= link_to h(tfl_team.name), edit_tfl_team_path(tfl_team) %></td>
	<td><%= h(tfl_team.abbr) %></td>
    <td class="action"><%= link_to 'Show', tfl_team %></td>
    <td class="action"><%= link_to 'Destroy', tfl_team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New TFL Team', new_tfl_team_path %>
